<p id="notice"><%= notice %></p>

<h1>Game Definitions</h1>
<% if can? :create, Game %>
<div class="pull-right">
  <%= link_to 'Add Game', new_game_path, :class => "btn btn-default" %>
</div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Game</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td>
          <div class="btn-group">
            <% if can? :update, game %>
              <%= link_to raw('<span class="fa fa-pencil"></span>'), edit_game_path(game), :class => "btn btn-default" %>
            <% end %>
            <% if can? :destroy, game %>
              <%= link_to raw('<span class="fa fa-trash"></span>'), game, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>