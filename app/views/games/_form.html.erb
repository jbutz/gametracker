<%= form_for(@game, :html=> {:class => "form-horizontal"}) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "control-label col-sm-1" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <div class="">
      
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-1">Roles</label>
    
    <div class="col-sm-10">
      <div id="game_roles_list">
        <%= f.fields_for :game_roles do |game_role| %>
            <div class="input-group">
              <%= game_role.text_field :name, :class => "form-control" %>
                <span class="input-group-btn">
                  <button type="button" class="btn btn-danger" data-action="delete">
                    <span class="glyphicon glyphicon-remove"></span>
                  </button>
                </span>
                <%= game_role.hidden_field :_destroy%>
            </div>
          <% end %>
      </div>
      <button id="games_form_add_game_role" class="btn btn-sm btn-default" type="button">Add Role</button>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit :class => "btn btn-primary btn-large" %>
      <%= link_to 'Cancel', games_path, :class => "btn btn-large btn-default" %>
    </div>
  </div>
<% end %>